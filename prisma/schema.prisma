generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String   @db.VarChar(255)
  description String?
  price       Int
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  role     Int     @default(0)
  token    String
  tokenExp Int
}
